{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://schemas.bentley.com/construction/events/activity.updated.v1.schema.json",
  "title": "Activity Updated V1 Schema",
  "type": "object",
  "description": "Schema for the data payload of a Activity Updated V1. Use `activity.updated.v1` as the `type` attribute.",
  "additionalProperties": false,
  "required": [
    "id",
    "name"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "guid",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "control_account_id": {
      "type": "string",
      "format": "guid"
    },
    "planned_start": {
      "type": [
        "null",
        "string"
      ],
      "format": "date"
    },
    "planned_finish": {
      "type": [
        "null",
        "string"
      ],
      "format": "date"
    },
    "actual_start": {
      "type": [
        "null",
        "string"
      ],
      "format": "date"
    },
    "actual_finish": {
      "type": [
        "null",
        "string"
      ],
      "format": "date"
    },
    "event_type_version": {
      "type": "string"
    }
  }
}